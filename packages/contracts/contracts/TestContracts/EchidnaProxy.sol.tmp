pragma solidity 0.6.11;

import "../TroveManager.sol";
import "../BorrowerOperations.sol";
import "../StabilityPool.sol";
import "../EBTCToken.sol";

contract EchidnaProxy {
    TroveManager cdpManager;
    BorrowerOperations borrowerOperations;
    StabilityPool stabilityPool;
    EBTCToken ebtcToken;

    constructor(
        TroveManager _cdpManager,
        BorrowerOperations _borrowerOperations,
        StabilityPool _stabilityPool,
        EBTCToken _ebtcToken
    ) public {
        cdpManager = _cdpManager;
        borrowerOperations = _borrowerOperations;
        stabilityPool = _stabilityPool;
        ebtcToken = _ebtcToken;
    }

    receive() external payable {
        // do nothing
    }

    // TroveManager

    function liquidatePrx(address _user) external {
        cdpManager.liquidate(_user);
    }

    function liquidateTrovesPrx(uint _n) external {
        cdpManager.liquidateTroves(_n);
    }

    function batchLiquidateTrovesPrx(address[] calldata _cdpArray) external {
        cdpManager.batchLiquidateTroves(_cdpArray);
    }

    function redeemCollateralPrx(
        uint _EBTCAmount,
        address _firstRedemptionHint,
        address _upperPartialRedemptionHint,
        address _lowerPartialRedemptionHint,
        uint _partialRedemptionHintNICR,
        uint _maxIterations,
        uint _maxFee
    ) external {
        cdpManager.redeemCollateral(_EBTCAmount, _firstRedemptionHint, _upperPartialRedemptionHint, _lowerPartialRedemptionHint, _partialRedemptionHintNICR, _maxIterations, _maxFee);
    }

    // Borrower Operations
    function openTrovePrx(uint _ETH, uint _EBTCAmount, address _upperHint, address _lowerHint, uint _maxFee) external payable {
        borrowerOperations.openTrove{value: _ETH}(_maxFee, _EBTCAmount, _upperHint, _lowerHint);
    }

    function addCollPrx(uint _ETH, address _upperHint, address _lowerHint) external payable {
        borrowerOperations.addColl{value: _ETH}(_upperHint, _lowerHint);
    }

    function withdrawCollPrx(uint _amount, address _upperHint, address _lowerHint) external {
        borrowerOperations.withdrawColl(_amount, _upperHint, _lowerHint);
    }

    function withdrawEBTCPrx(uint _amount, address _upperHint, address _lowerHint, uint _maxFee) external {
        borrowerOperations.withdrawEBTC(_maxFee, _amount, _upperHint, _lowerHint);
    }

    function repayEBTCPrx(uint _amount, address _upperHint, address _lowerHint) external {
        borrowerOperations.repayEBTC(_amount, _upperHint, _lowerHint);
    }

    function closeTrovePrx() external {
        borrowerOperations.closeTrove();
    }

    function adjustTrovePrx(uint _ETH, uint _collWithdrawal, uint _debtChange, bool _isDebtIncrease, address _upperHint, address _lowerHint, uint _maxFee) external payable {
        borrowerOperations.adjustTrove{value: _ETH}(_maxFee, _collWithdrawal, _debtChange, _isDebtIncrease, _upperHint, _lowerHint);
    }

    // Pool Manager
    function provideToSPPrx(uint _amount, address _frontEndTag) external {
        stabilityPool.provideToSP(_amount, _frontEndTag);
    }

    function withdrawFromSPPrx(uint _amount) external {
        stabilityPool.withdrawFromSP(_amount);
    }

    // EBTC Token

    function transferPrx(address recipient, uint256 amount) external returns (bool) {
        return ebtcToken.transfer(recipient, amount);
    }

    function approvePrx(address spender, uint256 amount) external returns (bool) {
        return ebtcToken.approve(spender, amount);
    }

    function transferFromPrx(address sender, address recipient, uint256 amount) external returns (bool) {
        return ebtcToken.transferFrom(sender, recipient, amount);
    }

    function increaseAllowancePrx(address spender, uint256 addedValue) external returns (bool) {
        return ebtcToken.increaseAllowance(spender, addedValue);
    }

    function decreaseAllowancePrx(address spender, uint256 subtractedValue) external returns (bool) {
        return ebtcToken.decreaseAllowance(spender, subtractedValue);
    }
}
